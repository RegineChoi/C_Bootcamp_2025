{
	"version": "2.0.0",
	"tasks": [
	  {
		"label": "Build Program",
		"type": "shell",
		"command": "gcc",
		"args": [
		  // 编译参数
		  "-g",
		  // 编译所有.c文件
		  "${workspaceFolder}/3_HealthTools/src/*.c",
		  
		  // 头文件搜索路径（关键！）
		  "-I${workspaceFolder}/3_HealthTools/include",
		  
		  // 输出目录和文件名（自动创建目录）
		  "-o",
		  "${workspaceFolder}/3_HealthTools/bin/HealthTools.exe",
		],
		"options": {
		  // 工作目录设为项目根目录（避免路径混乱）
		  "cwd": "${workspaceFolder}/3_HealthTools"
		},
		"group": {
		  "kind": "build",
		  "isDefault": true
		},
		"problemMatcher": ["$gcc"]
	  }
	]
  }